<?xml version="1.0" encoding ="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="us.pwc.vista.eclipse.tools.tagsupply">
         <iterate
               ifEmpty="false"
               operator="and">
            <test
                  property="gov.va.med.iss.meditor.propertyTester.tag">
            </test>
         </iterate>
      </definition>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ExpandKeywords"
            id="us.pwc.eclipse.vista.expandkeywords"
            name="Expand Keywords">
      </command>
      <command
            id="us.pwc.eclipse.vista.eclipse.tools.assumedvariables"
            name="Report Assumed Variables">
      </command>
      <command
            id="us.pwc.eclipse.vista.eclipse.tools.errors"
            name="Report Errors">
      </command>
      <command
            id="us.pwc.eclipse.vista.eclipse.tools.occurances"
            name="Report Occurances">
      </command>
      <command
            id="us.pwc.eclipse.vista.eclipse.tools.quittypes"
            name="Validate Quit Types">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">


	<!-- Adding MRA Tools to the M Editor -->
      
      <menuContribution
            allPopups="false"
            locationURI="popup:#TextEditorContext?after=additions">
         <menu
               label="M Refactor"
               icon="$nl$/icons/full/mtools16/meditor.gif">
            <command
                  commandId="us.pwc.eclipse.vista.expandkeywords"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="$nl$/icons/full/mtools16/meditor.gif"
               label="M Tools">
            <command
                  commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.eclipse.tools.errors"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.eclipse.tools.occurances"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="us.pwc.eclipse.vista.propertyPage.MTools"
            id="us.pwc.eclipse.vista.propertyPage.MTools"
            name="M Tools">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
      <page
            category="us.pwc.eclipse.vista.propertyPage.MTools"
            class="us.pwc.eclipse.vista.propertyPage.AssumedVariables"
            id="us.pwc.eclipse.vista.propertyPage.AssumedVariables"
            name="Assumed Variables">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
      <page
            category="us.pwc.eclipse.vista.propertyPage.MTools"
            class="us.pwc.eclipse.vista.propertyPage.Occurances"
            id="us.pwc.eclipse.vista.propertyPage.Occurances"
            name="Occurances">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesFiles"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesEditorFile"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesTags"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference></activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.ErrorsFiles"
            commandId="us.pwc.eclipse.vista.eclipse.tools.errors">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.ErrorsEditorFile"
            commandId="us.pwc.eclipse.vista.eclipse.tools.errors">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.ErrorsTags"
            commandId="us.pwc.eclipse.vista.eclipse.tools.errors">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesTags"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesFiles"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesEditorFile"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesTags"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesFiles"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesEditorFile"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
   </extension>

</plugin>
