            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.ErrorsTagsCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.errors">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesTagsCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesFilesCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.OccurancesEditorCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.occurances">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesTagsCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.tools.tagsupply">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesFilesCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.QuitTypesEditorCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.quittypes">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.ExpandKeywordsEditorCmd"
            commandId="us.pwc.eclipse.vista.eclipse.tools.expandkeywords">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.eclipse.core.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
   </extension>

</plugin>
