<?xml version="1.0" encoding ="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ReportAssumeVariables"
            id="us.pwc.eclipse.vista.assumevariable"
            name="Report Assumed Variables">
      </command>
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ReportErrors"
            id="us.pwc.eclipse.vista.error"
            name="Report Errors">
      </command>
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ReportOccurances"
            id="us.pwc.eclipse.vista.occurance"
            name="Report Occurances">
      </command>
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ValidateQuitTypes"
            id="us.pwc.eclipse.vista.quittype"
            name="Validate Quit Types">
      </command>
      <command
            defaultHandler="us.pwc.eclipse.vista.command.ExpandKeywords"
            id="us.pwc.eclipse.vista.expandkeywords"
            name="Expand Keywords">
      </command>
      <command
            id="us.pwc.eclipse.vista.eclipse.tools.assumedvariables"
            name="Report Assumed Variables">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:gov.va.med.iss.meditor.editors.outline.contextmenu"> <!--?after=additions -->
         <menu
               label="M Tools"
               icon="$nl$/icons/full/mtools16/meditor.gif">
            <command
                  commandId="us.pwc.eclipse.vista.assumevariable"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.error"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.occurance"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.quittype"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               label="M Tools"
               icon="$nl$/icons/full/mtools16/meditor.gif">
            <command
                  commandId="us.pwc.eclipse.vista.assumevariable"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.error"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.occurance"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.quittype"
                  style="push">
            </command>
         </menu>
      </menuContribution>


	<!-- Adding MRA Tools to the M Editor -->
      <menuContribution
            allPopups="false"
            locationURI="popup:#TextEditorContext?after=additions"> <!--TODO: add logic to only apply to M Editor -->
         <menu
               label="M Tools"
               icon="$nl$/icons/full/mtools16/meditor.gif">
            <command
                  commandId="us.pwc.eclipse.vista.assumevariable"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.error"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.occurance"
                  style="push">
            </command>
            <command
                  commandId="us.pwc.eclipse.vista.quittype"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      
      <menuContribution
            allPopups="false"
            locationURI="popup:#TextEditorContext?after=additions">
         <menu
               label="M Refactor"
               icon="$nl$/icons/full/mtools16/meditor.gif">
            <command
                  commandId="us.pwc.eclipse.vista.expandkeywords"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="xxx.xxx.xxx.xxx">
         <menu
               icon="$nl$/icons/full/mtools16/meditor.gif"
               label="M Tools New">
            <command
                  commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="us.pwc.eclipse.vista.propertyPage.MTools"
            id="us.pwc.eclipse.vista.propertyPage.MTools"
            name="M Tools">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
      <page
            category="us.pwc.eclipse.vista.propertyPage.MTools"
            class="us.pwc.eclipse.vista.propertyPage.AssumedVariables"
            id="us.pwc.eclipse.vista.propertyPage.AssumedVariables"
            name="Assumed Variables">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
      <page
            category="us.pwc.eclipse.vista.propertyPage.MTools"
            class="us.pwc.eclipse.vista.propertyPage.Occurances"
            id="us.pwc.eclipse.vista.propertyPage.Occurances"
            name="Occurances">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesFiles"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.mtree">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesEditorFile"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <reference
                  definitionId="us.pwc.vista.mlib.exprdef.editor.mfile">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="us.pwc.eclipse.vista.command.AssumedVariablesTags"
            commandId="us.pwc.eclipse.vista.eclipse.tools.assumedvariables">
         <activeWhen>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <test
                     property="gov.va.med.iss.meditor.propertyTester.tag">
               </test>
            </iterate></activeWhen>
      </handler>
   </extension>

</plugin>
