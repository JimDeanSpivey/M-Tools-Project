<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="gov.va.med.iss.meditor.treemresources">
         <iterate
               ifEmpty="false"
               operator="and">
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IFolder">
               </instanceof>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
                  <test
                        property="org.eclipse.core.resources.extension"
                        value="m">
                  </test>
               </and>
            </or>
         </iterate>
      </definition>
      <definition
            id="gov.va.med.iss.meditor.treemresourceswithfolders">
         <and>
            <iterate
                  ifEmpty="false"
                  operator="or">
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
                  <instanceof
                        value="org.eclipse.core.resources.IFolder">
                  </instanceof>
               </or>
            </iterate>
            <reference
                  definitionId="gov.va.med.iss.meditor.treemresources">
            </reference>
         </and>
      </definition>
      <definition
            id="gov.va.med.iss.meditor.onlyfolder">
         <and>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IFolder">
                  </instanceof>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </or>
            </iterate>
            <count
                  value="1">
            </count>
         </and>
      </definition>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="gov.va.med.iss.meditor.actionSet">
         <menu
               label="&amp;VistA"
               id="vistaMenu">
            <separator
                  name="editGroup">
            </separator>
         </menu>
         <action
               label="&amp;Load M routine"
               icon="icons/meditor.gif"
               class="gov.va.med.iss.meditor.actions.RoutineEditAction"
               tooltip="Load M routine"
               menubarPath="vistaMenu/editGroup"
               toolbarPath="vistaGroup"
               id="gov.va.med.iss.meditor.actions.RoutineEditAction">
         </action>
      </actionSet>
      <actionSet
            label="Global Directory"
            visible="true"
            id="gov.va.med.iss.meditor.globalDirectory">
         <menu
               label="&amp;VistA"
               id="vistaMenu">
            <separator
                  name="toolsGroup">
            </separator>
         </menu>
         <action
               label="Global &amp;Directory"
               icon="icons/meditor.gif"
               class="gov.va.med.iss.meditor.actions.GlobalDirectoryAction"
               tooltip="List of Global Names"
               menubarPath="vistaMenu/toolGroup"
               id="gov.va.med.iss.meditor.actions.GlobalDirectoryAction">
         </action>
      </actionSet>
      <actionSet
            label="Global Listing"
            visible="true"
            id="gov.va.med.iss.meditor.globalListing">
         <menu
               label="&amp;VistA"
               id="vistaMenu">
            <separator
                  name="toolsGroup">
            </separator>
         </menu>
         <action
               label="&amp;Global Listing"
               icon="icons/meditor.gif"
               class="gov.va.med.iss.meditor.actions.GlobalListingAction"
               tooltip="List of Global Contents"
               menubarPath="vistaMenu/toolGroup"
               id="gov.va.med.iss.meditor.actions.GlobalListingAction">
         </action>
      </actionSet>
      <actionSet
            label="Routine Directory"
            visible="true"
            id="gov.va.med.iss.meditor.routineDirectory">
         <menu
               label="VistA"
               id="vistaMenu">
            <separator
                  name="toolsGroup">
            </separator>
         </menu>
         <action
               label="&amp;Routine Directory"
               icon="icons/meditor.gif"
               class="gov.va.med.iss.meditor.actions.RoutineDirectoryAction"
               tooltip="List of Routine Names"
               menubarPath="vistaMenu/toolGroup"
               id="gov.va.med.iss.meditor.actions.RoutineDirectoryAction">
         </action>
      </actionSet>
   </extension>
   <extension
         id="gov.va.med.iss.meditor.meditor"
         name="gov.va.med.iss.meditor.meditor"
         point="org.eclipse.ui.editors">
      <editor
            class="gov.va.med.iss.meditor.editors.MEditor"
            icon="icons/mfile.gif"
            contributorClass="gov.va.med.iss.meditor.editors.MEditorContributor"
            name="MEditor"
            id="gov.va.med.iss.meditor.editors.MEditor"
            extensions="m"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="M-Editor"
            category="gov.va.med.iss.connection.preferences.VistaPreferencePage"
            class="gov.va.med.iss.meditor.preferences.MEditorPreferencesPage"
            id="gov.va.med.iss.meditor.preferences.MEditorPreferencesPage">
      </page>
    </extension>
   <extension
         id="gov.va.med.iss.meditor.preferences.meditorPropertyPage1"
         name="M-Editor"
         point="org.eclipse.ui.propertyPages">
      <page
            class="gov.va.med.iss.meditor.preferences.MEditorPropertyPage1"
            icon="icons/meditor.gif"
            id="gov.va.med.iss.meditor.page1"
            name="M-Editor"
            nameFilter="*.m">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               icon="icons/meditor.gif"
               label="M Server Util">
            <command
                  commandId="gov.va.med.iss.meditor.command.saveRoutines"
                  label="Save Routines"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="gov.va.med.iss.meditor.treemresources">
                  </reference>
               </visibleWhen>
            </command>
            <command
                  commandId="gov.va.med.iss.meditor.command.saveRoutines"
                  label="Save Routines in Namespace"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="gov.va.med.iss.meditor.treemresourceswithfolders">
                  </reference>
               </visibleWhen>
               <parameter
                     name="gov.va.med.iss.meditor.command.saveRoutines.specifyNamespace"
                     value="true">
               </parameter>
            </command>
            <command
                  commandId="gov.va.med.iss.meditor.command.loadExistingRoutines"
                  label="Load Routines"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="gov.va.med.iss.meditor.treemresources">
                  </reference>
               </visibleWhen>
            </command>
            <command
                  commandId="gov.va.med.iss.meditor.command.loadRoutinesIntoDirectory"
                  label="Load Routines in Namespace"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="gov.va.med.iss.meditor.onlyfolder">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="gov.va.med.iss.meditor.command.SaveRoutines"
            id="gov.va.med.iss.meditor.command.saveRoutines"
            name="Save Routines">
         <commandParameter
               id="gov.va.med.iss.meditor.command.saveRoutines.specifyNamespace"
               name="Specify Namespace"
               optional="false">
         </commandParameter>
      </command>
      <command
            defaultHandler="gov.va.med.iss.meditor.command.LoadExistingRoutines"
            id="gov.va.med.iss.meditor.command.loadExistingRoutines"
            name="Load Existing Routines">
      </command>
      <command
            defaultHandler="gov.va.med.iss.meditor.command.LoadRoutinesIntoDirectory"
            id="gov.va.med.iss.meditor.command.loadRoutinesIntoDirectory"
            name="Load Routines Into Directory">
      </command>
   </extension>
</plugin>
